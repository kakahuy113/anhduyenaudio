						h3 Thông tin liên hệ
						.form-group
							input#fullname(type="text", name="" placeholder="Họ tên")
						.form-group
							input#phone(type="text", name="" placeholder="Số diện thoại")
						h3 Thông tin địa chỉ
						.form-group
							select#ShippingCitySelectedValue
								option Chọn Tỉnh/Thành phố
